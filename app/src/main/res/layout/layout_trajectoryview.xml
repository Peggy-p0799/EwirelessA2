<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/swipeLayout"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:mode="same_level"
    app:dragEdge="right">

    <!-- Your secondary layout here -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvLoad"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:background="@color/deepBlue"
            android:layout_weight="1"
            android:text="LOAD"
            android:textColor="@color/backgroundWhite"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvUpload"
            android:layout_width="100dp"
            android:background="@color/grassGreen"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="UPLOAD"
            android:textColor="@color/backgroundWhite"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tvDelete"
            android:layout_width="100dp"
            android:background="#790606"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="DELETE"
            android:textColor="@color/backgroundWhite"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"/>

    </LinearLayout>


    <!-- Your main layout here -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">


        <TextView
            android:id="@+id/tvTrajectoryNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alike"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="Trajectory 1"
            android:textColor="@color/deepBlue"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvTrajectoryLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:paddingLeft="250dp"
            android:fontFamily="@font/dm_serif_text"
            android:textSize="12sp"
            android:paddingTop="4dp"
            android:textColor="@color/deepBlue"/>

        <TextView
            android:id="@+id/tvTrajectoryTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timestamp"
            android:fontFamily="@font/dm_serif_text"
            android:textSize="12sp"
            android:paddingLeft="250dp"
            android:paddingTop="25dp"
            android:textColor="@color/deepBlue"/>
    </FrameLayout>
</com.chauthai.swipereveallayout.SwipeRevealLayout>